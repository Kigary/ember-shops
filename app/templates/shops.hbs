{{#unless isShopSelected}}
  <div class="shops">
    <div class="col-md-6">
      <h3>Shops</h3>
      <div class="list-group">
        <div class="list-group-item">
          <form {{action "createShop" on="submit"}}>
            {{input type="text" placeholder="New Shop" value=name}}
            <button type="submit" class="btn btn-primary btn-sm"
                    disabled={{isAddButtonDisabled}}>
              Add
            </button>
          </form>
        </div>
        {{#each model as |shop|}}
          {{shop-info item=shop}}
        {{/each}}
      </div>
    </div>
  </div>
{{else}}
  {{outlet}}
{{/unless}}