{{#unless isShopSelected}}
  <div class="shops">
    <div class="col-md-6">
      <h2>Shops</h2>
      <div class="list-group">
        {{#each model as |shop|}}
          {{shop-info item=shop}}
        {{/each}}
      </div>
      <button type="button" class="btn btn-lg"
              data-toggle="modal" data-target="#addShop">
        Add Shop
      </button>
    </div>
  </div>
  <div id="addShop" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">x</button>
          <h4 class="modal-title">New Shop</h4>
        </div>
        <div class="modal-body">
          {{input type="text" class="new-shop" placeholder="Name" value=name maxlength="40"}}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal"
                  disabled={{isAddButtonDisabled}} {{action "createShop"}}>
            Add
          </button>
          <button type="button" class="btn btn-default" data-dismiss="modal">
            Cancel
          </button>
        </div>
      </div>
    </div>
  </div>
{{else}}
  {{outlet}}
{{/unless}}